<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="DungeonCrawler.Views.OpeningPage">
    <ContentPage.Content>
    </ContentPage.Content>
    <StackLayout BackgroundColor="Black">
       <Image Grid.Row="1" Margin="0,50,0,0" Source="DapperDino.png" WidthRequest="300"/> 
        <ScrollView Grid.Row='2'>
            <StackLayout Orientation="Vertical" Padding="25,10,25,0" Spacing="0">
               <Button Text="CRUDi" Clicked="CRUDiPageButtonClick" BackgroundColor="{StaticResource Primary}" TextColor="White" />
               <Button Margin="0,20,0,0" Text="Play" Clicked="PlayButtonClick" BackgroundColor="{StaticResource Primary}" TextColor="White" />
               <Button Margin="0,20,0,0" Text="About" Clicked="AboutPageButtonClick" BackgroundColor="{StaticResource Primary}" TextColor="White" />


            </StackLayout>
        </ScrollView>
    </StackLayout>
</ContentPage>